<% content_for(:title, "Wikipages: #{@contact.name}") %>

<h1><%= @contact.name %></h1>

<!-- <p>
  Phone: <%= @contact.phone %>
</p> -->

<p>
  Email: <%= @contact.email %>
</p>

<p>Phones:</p>

<ul>
  <% @contact.phones.each do |phone| %>
    <li>
      <%= phone.number %> |
      <%= link_to('Edit', edit_contact_phone_path(@contact, phone)) %> |
      <%= link_to('Delete', ) %>
      <a href="/contacts/<%= @contact.id %>/phones/<%= phone.id %>"
         data-confirm="You sure?"
         data-method="delete"
         rel="nofollow">Delete</a>
    </li>
  <% end %>
</ul>

<p>
  <%= link_to('Add phone', new_contact_phone_path(@contact)) %>
</p>

<p>
  <%= link_to('Edit', edit_contact_path(@contact), class: 'btn') %>
</p>

<p>
  <%= link_to('Delete', @contact, {
    data: { confirm: 'You sure?', method: 'delete' },
    class: 'btn btn-danger',
    rel: 'nofollow'
  }) %>
</p>

<p>
  <a href="/contacts">Return to contact list</a>
</p>
